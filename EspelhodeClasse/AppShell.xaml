<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EspelhodeClasse.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:EspelhodeClasse.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Alunos"
            ContentTemplate="{DataTemplate views:Alunos}" />

        <ShellContent
            Title="Sala 2D"
            ContentTemplate="{DataTemplate views:Sala2D}" />

        <ShellContent
            Title="Sala 3D"
            ContentTemplate="{DataTemplate views:Sala3D}" />

        <ShellContent
            Title="Sobre"
            ContentTemplate="{DataTemplate views:Sobre}" />
    </TabBar>

</Shell>
